            android:name="be.ucll.java.mobile.smarthome_mobile.AccountActivity"
            android:label="@string/title_activity_account"
            android:theme="@style/Theme.SmartHomeMobile.NoActionBar" />
        <activity
            android:name="be.ucll.java.mobile.smarthome_mobile.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.SmartHomeMobile.NoActionBar" />
        <activity android:name="be.ucll.java.mobile.smarthome_mobile.ManageActivity" />
        <activity android:name="be.ucll.java.mobile.smarthome_mobile.ConsumptionActivity" />
        <activity android:name="be.ucll.java.mobile.smarthome_mobile.RegisterActivity" />
        <activity android:name="be.ucll.java.mobile.smarthome_mobile.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />
    </application>

</manifest>