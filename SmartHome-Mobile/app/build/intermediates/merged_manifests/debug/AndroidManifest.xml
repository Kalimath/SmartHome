        android:minSdkVersion="30"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.SmartHomeMobile"
        android:usesCleartextTraffic="true" >
        <activity android:name="be.ucll.java.mobile.smarthome_mobile.AddRoomActivity" />
        <activity android:name="be.ucll.java.mobile.smarthome_mobile.AddDeviceActivity" />
        <activity android:name="be.ucll.java.mobile.smarthome_mobile.DeviceActivity" />
        <activity android:name="be.ucll.java.mobile.smarthome_mobile.RoomActivity" />
        <activity android:name="be.ucll.java.mobile.smarthome_mobile.HouseActivity" />
        <activity android:name="be.ucll.java.mobile.smarthome_mobile.AddHouseActivity" />
        <activity
            android:name="be.ucll.java.mobile.smarthome_mobile.LogOutActivity"
            android:label="@string/title_activity_log_out"
            android:theme="@style/Theme.SmartHomeMobile.NoActionBar" />
